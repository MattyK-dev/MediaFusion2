# Build the docker image with `npx nx docker-build MediaFusion`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t MediaFusion`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system MediaFusion && \
          adduser --system -G MediaFusion MediaFusion

COPY dist/apps/MediaFusion MediaFusion/
RUN chown -R MediaFusion:MediaFusion .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix MediaFusion --omit=dev -f install

CMD [ "node", "MediaFusion" ]
